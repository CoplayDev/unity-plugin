}

.settings-buttons {
    flex-direction: row;
    align-items: center;
    flex-grow: 0;
    flex-shrink: 0;
    margin-right: 10px;
}

.update-button-row {
    flex-direction: row;
    justify-content: center;
    align-items: center;
    margin-top: 5px;
}

.update-button {
    display: none;
    background-color: rgb(76, 175, 80);
    color: rgb(255, 255, 255);
    border-radius: 3px;
    padding: 2px 8px;
    -unity-text-align: middle-center;
}

#settings_bar {
    background-color: rgb(32, 32, 32);
}

#messages {
    background-color: rgb(32, 32, 32);
}

#pending_message {
    padding: 1px 5px 1px 5px;
    flex-direction: row;
    align-items: center;
    color: rgb(90, 90, 90);
}

#pending_message Button {
    background-color: rgba(0, 0, 0, 0);
    color: rgb(90, 90, 90);
    border-top-width: 0;
    border-right-width: 0;
    border-bottom-width: 0;
    border-left-width: 0;
    cursor: Link;
    padding: 0;
    margin: 0 3px 0 3px;
    font-size: 10px;
}

#pending_message Button:hover {
    color: rgb(255, 255, 255);
}

#action_records_container {
    padding: 10px;
    margin: 10px;
    background-color: rgb(32, 32, 32);
    border-radius: 5px;
    flex-direction: column;
    flex-shrink: 0;
}

#action_record {
    padding: 1px 1px 1px 1px;
    flex-direction: row;
    align-items: center;
}

#action_record Label {
    flex-grow: 1;
    flex-shrink: 1;
    white-space: normal;
}

#login:hover {
    cursor: Link;
}

#reset:hover {
    background-color: rgb(103, 103, 103);
